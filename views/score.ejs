<%- include ./part/header.ejs %>

<% teams.forEach(team => { %>
	<p><%= team.team_1.name %> vs <%= team.team_2.name %></p>
<% }); %>

<h1>Score</h1>

<button class="start">Start event</button>

<div id="score">
	<div>
		<h3 class="leftPrc">0</h3>
		<button>+1</button>
		<button>no</button>
	</div>
	<p><%= score || 0 %></p>
	<p>-</p>
	<p></p>
	<div>
		<h3 class="rightPrc">0</h3>
		<button>+1</button>
		<button>no</button>
	</div>
</div>

<h2 class="timer">0</h2>

<button class="done">Done</button>

<form class="hide" method="POST" action="/score/result">
	<h2>Final score</h2>
	<input type="text" name="team_1_score" value="">
	<input type="text" name="team_2_score" value="">
	<button type="submit" name="submit">Submit</button>
</form>

<script src="/js/bundle.js"></script>
<%- include ./part/footer.ejs %>
