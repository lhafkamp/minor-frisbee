<%- include ./part/header.ejs %>

<% teams.forEach(team => { %>
	<div id="vs">
		<p style="color: rgb(<%= leftTeamColor %>);"><%= team.team_1.name %></p> 
		<p>VS</p> 
		<p style="color: rgb(<%= rightTeamColor %>);"><%= team.team_2.name %></p>
	</div>
<% }); %>

<div id="score">
	<div>
		<h3 class="leftPrc"><%= leftPercentage || 0 %></h3>
		<button style="background: rgb(<%= leftTeamColor %>);" disabled="true">v</button>
	</div>
	<div>
		<p><%= leftScore || 0 %></p>
		<p>-</p>
		<p><%= rightScore || 0 %></p>
	</div>
	<div>
		<h3 class="rightPrc"><%= rightPercentage || 0 %></h3>
		<button style="background: rgb(<%= rightTeamColor %>);" disabled="true">v</button>
	</div>
</div>

<div class="test">
	<span></span>
</div>

<!-- <progress class="timer" value="0" max="15"></progress> -->
<button class="start">Start voting</button>

<button class="<%= admin %> done">Done</button>

<form class="hide" method="POST" action="/score/<%= teams[0].id %>/result">
	<h2>Final score</h2>
	<input type="text" name="team_1_score" value="">
	<input type="text" name="team_2_score" value="">
	<button type="submit" name="submit">Submit</button>
</form>

<script src="/js/bundle.js"></script>
<%- include ./part/footer.ejs %>
